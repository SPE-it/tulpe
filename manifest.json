{
    "manifest_version": 2,
    "name": "Tulpe",
    "description": "__MSG_extensionDescription__",
    "version": "1.6",
    "author": "S.P.E. Sistemi e progetti elettronici",
	"default_locale": "en",
    "applications": {
        "gecko": {
            "id": "tulpe@spe.it",
            "strict_min_version": "78.0"
        }
    },
	"compose_action": {
		"default_title": "TLP",
		"default_icon" : "images/icon.png",
		"default_popup" : "compose_popup.html"
	},
	"background": {
		"scripts": [
		  "background.js"
		]
	},
	"options_ui": {
		"page": "options_page.html",
		"open_in_tab": false,
		"browser_style": true
	},
    "permissions": [
		"compose",
		"tabs",
		"activeTab",
		"storage"
    ],
    "icons": {
        "64": "images/64x64.png",
		"32": "images/32x32.png",
        "16": "images/16x16.png"
    }
}